<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>    <link rel="stylesheet" href="css/singleAlumniProfile.css">
    <title>Alumni</title>
</head>
<body>


    <div class="container emp-profile">
        <form method="post">
            <div class="row">
                <div class="col-md-4">
                    <div  class="profile-img">
                        <img src="https://bootdey.com/img/Content/avatar/avatar<%-(Math.floor(Math.random() * (6) + 1))%>.png" alt=""/>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="profile-head">
                                <h5>
                                    <%=alumni.name%>
                                </h5>
                                <h6>
                                    <%=alumni.currentPosition%> | <%=alumni.currentCompany%>
                                </h6>
                                <br>
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" >About</a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link " id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" >Experience</a>
                            </li>
                        </ul>
                    </div>
                </div>
                
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="profile-work mt-1">
                        <%=alumni.bio%>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="tab-content profile-tab" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>Name</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p><%=alumni.name%></p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>Email</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p><%=alumni.email%></p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>Passout Year</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p><%=alumni.passoutYear%></p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>Current Company</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p><%=alumni.currentCompany%></p>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>Position</label>
                                        </div>
                                        <div class="col-md-6">
                                            <p><%=alumni.currentPosition%></p>
                                        </div>
                                    </div>
                                    
                        </div>
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                    
                            <%alumni.experience.forEach(item => {%>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label><%=item.nameOfCompany%> | <%=item.position%></label>
                                        </div>
                                        <div class="col-md-6">
                                            <p><%=item.startingDate%>  -- <%=item.endingDate%></p>
                                        </div>
                                    </div>
                            <%})%>

                            <br>
                            <br>
                            <%if(canAddExperience){%>
                            <div class="row">
                                <div class="col-md-12">
                                    <a href="addExperience" style="background: #5543ca;color: white;text-decoration: none;" class="profile-edit-btn">Add Experience</a>
                                </div>
                            </div>
                            <%}%>
                        </div>
                    </div>
                </div>
            </div>
        </form>           
    </div>
    <script src="js/singleAlumniProfile.js"></script>
</body>
</html>